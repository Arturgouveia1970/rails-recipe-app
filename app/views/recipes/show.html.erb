<p style="color: green"><%= notice %></p>

<div>
  <%= link_to "Back to recipes", recipes_path %>
</div>


  <%= @recipe.name %>
  <div class="d-flex justify-content-between">
      <h5>Preparation_time: <%= @recipe.preparation_time %></h5>
      <%= @recipe.public %>
  </div>
    <h5>Cooking_time: <%= @recipe.cooking_time %></h5>
    <% "Steps go here.." %>
  <div class="d-flex mx-4 justify-content-between">
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal"> Generate Shopping list </button>
  <button> Add ingredients </button>
  </div>
  <hr>

  <div>
    <table>
      <thead>
        <tr>
          <th>Food</th>
          <th>Quantity</th>
          <th>Value</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @foods.each do |food| %>
          <tr>
            <td><%= food[2] %></td>
            <td><%= food[1] %></td>
            <td><%= food[0] %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Generate shopping list</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p> Choose an inventory to use </p>
      <div class="d-flex justify-content-evenly">
        <select id="cars" name="cars">
          <option value="inventory">select inventory</option>
          <option value="one">Inventory 2</option>
          <option value="two">Inventory 3</option>
          <option value="three">Inventory 4</option>
        </select>
        <button> Generate </button>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>


