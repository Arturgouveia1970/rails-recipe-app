<div class="container text-center">
  <h2>Log in</h2>
<div class="form-group">

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-group">
      <%= f.label :email %><br>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control mt-4' %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: 'mt-4' %><br />
      <%= f.password_field :password, autocomplete: "current-password" , class: 'form-control mt-4' %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="form-group m-2">
        <%= f.check_box :remember_me, class: 'pt-5' %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Log in", class: "form-control btn btn-primary mt-4"%>
    </div>
  <% end %>
</div>

  <%= render "devise/shared/links" %>

</div>
